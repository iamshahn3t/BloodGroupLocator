@{
    ViewData["Title"] = "Blood Group Locator";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content fade-in-up">
                <h1 class="display-3 fw-bold mb-4">
                    🩸 Blood Group Locator
                </h1>
                <p class="lead mb-4">
                    Connect with life-saving blood donors in your community. Find the right blood type when every second counts.
                </p>
                <div class="d-flex flex-wrap gap-3">
                    <a asp-action="Locate" class="btn btn-light btn-lg pulse-animation">
                        <i class="fas fa-search me-2"></i>Find Blood Group
                    </a>
                    <a asp-controller="Person" asp-action="Create" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-user-plus me-2"></i>Register as Donor
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image">
                    <i class="fas fa-heartbeat" style="font-size: 15rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="h1 fw-bold text-dark">How It Works</h2>
            <p class="lead text-muted">Simple steps to save lives</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="feature-card fade-in-up">
                    <div class="feature-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Register</h4>
                    <p class="text-muted">Add your blood group and location to help others in need</p>
                    <a asp-controller="Person" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Register Now
                    </a>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="feature-card fade-in-up">
                    <div class="feature-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Search</h4>
                    <p class="text-muted">Find compatible blood groups near your location instantly</p>
                    <a asp-action="Locate" class="btn btn-danger">
                        <i class="fas fa-search me-1"></i>Start Search
                    </a>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="feature-card fade-in-up">
                    <div class="feature-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Contact</h4>
                    <p class="text-muted">Reach out to potential donors through secure contact information</p>
                    <a asp-controller="Person" asp-action="Index" class="btn btn-success">
                        <i class="fas fa-users me-1"></i>View All
                    </a>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="feature-card fade-in-up">
                    <div class="feature-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Help</h4>
                    <p class="text-muted">Be part of a community that saves lives every day</p>
                    <a asp-action="Privacy" class="btn btn-warning">
                        <i class="fas fa-info-circle me-1"></i>Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3 class="fw-bold text-primary">100+</h3>
                    <p class="text-muted">Registered Donors</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card">
                    <i class="fas fa-map-marker-alt fa-3x text-danger mb-3"></i>
                    <h3 class="fw-bold text-danger">50km</h3>
                    <p class="text-muted">Search Radius</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card">
                    <i class="fas fa-clock fa-3x text-success mb-3"></i>
                    <h3 class="fw-bold text-success">24/7</h3>
                    <p class="text-muted">Emergency Access</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card">
                    <i class="fas fa-shield-alt fa-3x text-warning mb-3"></i>
                    <h3 class="fw-bold text-warning">100%</h3>
                    <p class="text-muted">Secure & Private</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5">
                        <h2 class="h1 fw-bold text-dark mb-4">Ready to Save Lives?</h2>
                        <p class="lead text-muted mb-4">
                            Join our community of life-savers. Every registration could mean the difference between life and death for someone in need.
                        </p>
                        <div class="d-flex flex-wrap justify-content-center gap-3">
                            <a asp-controller="Person" asp-action="Create" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Register as Donor
                            </a>
                            <a asp-action="Locate" class="btn btn-outline-danger btn-lg">
                                <i class="fas fa-search me-2"></i>Find Blood Group
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.stat-card {
    padding: 2rem 1rem;
    transition: transform 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-5px);
}

.hero-image {
    position: relative;
}

.hero-image::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 300px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: pulse 3s infinite;
}

@@keyframes pulse {
    0% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 0.7;
    }
    100% {
        transform: translate(-50%, -50%) scale(1.2);
        opacity: 0;
    }
}
</style>
