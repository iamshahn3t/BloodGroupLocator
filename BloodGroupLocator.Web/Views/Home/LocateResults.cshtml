@model IEnumerable<BloodGroupLocator.Web.Models.Person>

@{
    ViewData["Title"] = "Search Results";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">üîç Search Results</h1>
            
            <div class="mb-4">
                <div class="alert alert-success">
                    <h5><i class="fas fa-search"></i> Search Criteria:</h5>
                    <p class="mb-0">
                        Blood Group: <strong>@ViewBag.BloodGroup</strong>
                        @if (ViewBag.Latitude != null && ViewBag.Longitude != null)
                        {
                            <span> | Location: (@ViewBag.Latitude, @ViewBag.Longitude) | Radius: @ViewBag.Radius km</span>
                        }
                    </p>
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="row">
                    <div class="col-12">
                        <h3>Found @Model.Count() person(s) with @ViewBag.BloodGroup blood group</h3>
                    </div>
                </div>

                <div class="row">
                    @foreach (var person in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title">@person.Name</h5>
                                        <span class="badge bg-danger fs-6">@person.BloodGroup</span>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <h6 class="text-muted">Contact Information:</h6>
                                        @if (!string.IsNullOrEmpty(person.Phone))
                                        {
                                            <p class="mb-1">
                                                <i class="fas fa-phone"></i> 
                                                <a href="tel:@person.Phone">@person.Phone</a>
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(person.Email))
                                        {
                                            <p class="mb-1">
                                                <i class="fas fa-envelope"></i> 
                                                <a href="mailto:@person.Email">@person.Email</a>
                                            </p>
                                        }
                                    </div>

                                    <div class="mb-3">
                                        <h6 class="text-muted">Location:</h6>
                                        <p class="mb-1">
                                            <i class="fas fa-map-marker-alt"></i> @person.Address
                                        </p>
                                        @if (person.Latitude.HasValue && person.Longitude.HasValue)
                                        {
                                            <small class="text-muted">
                                                Coordinates: @person.Latitude.Value.ToString("F6"), @person.Longitude.Value.ToString("F6")
                                            </small>
                                        }
                                    </div>
                                </div>
                                
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between">
                                        <a asp-controller="Person" asp-action="Details" asp-route-id="@person.Id" class="btn btn-sm btn-outline-primary">
                                            View Details
                                        </a>
                                        @if (!string.IsNullOrEmpty(person.Phone))
                                        {
                                            <a href="tel:@person.Phone" class="btn btn-sm btn-success">
                                                <i class="fas fa-phone"></i> Call
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <h4><i class="fas fa-exclamation-triangle"></i> No Results Found</h4>
                    <p>No people found with @ViewBag.BloodGroup blood group in the specified area.</p>
                    <div class="mt-3">
                        <a asp-action="Locate" class="btn btn-primary me-2">Try Different Search</a>
                        <a asp-controller="Person" asp-action="Index" class="btn btn-outline-secondary">View All People</a>
                    </div>
                </div>
            }

            <div class="mt-4 text-center">
                <a asp-action="Locate" class="btn btn-primary">
                    <i class="fas fa-search"></i> New Search
                </a>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-home"></i> Home
                </a>
            </div>
        </div>
    </div>
</div>
