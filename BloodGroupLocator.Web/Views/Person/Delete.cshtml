@model BloodGroupLocator.Web.Models.Person

@{
    ViewData["Title"] = "Delete Person";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4 text-danger">Delete Person</h1>
            
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">Warning!</h4>
                <p>Are you sure you want to delete this person? This action cannot be undone.</p>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Personal Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>
                                
                                <dt class="col-sm-4">Blood Group:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-danger fs-6">@Model.BloodGroup</span>
                                </dd>
                                
                                <dt class="col-sm-4">Address:</dt>
                                <dd class="col-sm-8">@Model.Address</dd>
                                
                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">@(Model.Phone ?? "Not provided")</dd>
                                
                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@(Model.Email ?? "Not provided")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5>Location Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Latitude:</dt>
                                <dd class="col-sm-8">@(Model.Latitude?.ToString("F6") ?? "Not provided")</dd>
                                
                                <dt class="col-sm-4">Longitude:</dt>
                                <dd class="col-sm-8">@(Model.Longitude?.ToString("F6") ?? "Not provided")</dd>
                                
                                <dt class="col-sm-4">Created:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                                
                                <dt class="col-sm-4">Updated:</dt>
                                <dd class="col-sm-8">@Model.UpdatedAt.ToString("MMM dd, yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this person? This action cannot be undone.')">
                            Delete Person
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
