@model IEnumerable<BloodGroupLocator.Web.Models.Person>

@{
    ViewData["Title"] = "Blood Group Locator - Manage People";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">Blood Group Locator</h1>
            <p class="text-center text-muted mb-4">Manage people and their blood group information</p>
            
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>People</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Person
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Blood Group</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var person in Model)
                            {
                                <tr>
                                    <td>@person.Name</td>
                                    <td>
                                        <span class="badge bg-danger">@person.BloodGroup</span>
                                    </td>
                                    <td>@person.Address</td>
                                    <td>@person.Phone</td>
                                    <td>@person.Email</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@person.Id" class="btn btn-sm btn-outline-info">Details</a>
                                            <a asp-action="Edit" asp-route-id="@person.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@person.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h4>No people found</h4>
                    <p>Start by adding some people to the system.</p>
                    <a asp-action="Create" class="btn btn-primary">Add First Person</a>
                </div>
            }
        </div>
    </div>
</div>
