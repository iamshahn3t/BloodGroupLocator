@model BloodGroupLocator.Web.Models.Person

@{
    ViewData["Title"] = "Add New Person";
}

<!-- Header -->
<section class="py-4 bg-gradient-primary text-white shadow-sm">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="h2 fw-bold mb-2 text-white">
                    <i class="fas fa-plus-circle me-2"></i> Register New Blood Donor
                </h1>
                <p class="lead mb-0 text-light fw-normal">
                    Add a new person to the blood donor registry
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-2"></i>Back to Registry
                </a>
            </div>
        </div>
    </div>
</section>


<!-- Main -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg rounded-4">
                    <div class="card-header bg-gradient-primary text-white rounded-top-4">
                        <h5 class="mb-0 fw-bold">
                            <i class="fas fa-user-plus me-2"></i>Donor Information
                        </h5>
                    </div>

                    <div class="card-body p-4">
                        <form asp-action="Create" method="post" id="donorForm" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert" id="validationSummary">
                                <h6 class="alert-heading">
                                    <i class="fas fa-exclamation-triangle me-2"></i>Please correct the following errors:
                                </h6>
                            </div>

                            <!-- Personal Info -->
                            <div class="form-section mb-4">
                                <h6 class="section-title">
                                    <i class="fas fa-user me-2"></i>Personal Information
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Name" class="form-control" placeholder="Full Name" required />
                                            <label asp-for="Name">Full Name *</label>
                                            <span asp-validation-for="Name" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="BloodGroup" class="form-select" required>
                                                <option value="">Select Blood Group</option>
                                                @foreach (var bg in new[] { "A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-" })
                                                {
                                                    <option value="@bg">@bg</option>
                                                }
                                            </select>
                                            <label asp-for="BloodGroup">Blood Group *</label>
                                            <span asp-validation-for="BloodGroup" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Location -->
                            <div class="form-section mb-4">
                                <h6 class="section-title">
                                    <i class="fas fa-map-marker-alt me-2"></i>Location Information
                                </h6>
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Address" class="form-control" style="height:100px" placeholder="Address" required></textarea>
                                    <label asp-for="Address">Address *</label>
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Latitude" type="number" step="any" class="form-control" placeholder="Latitude" />
                                            <label asp-for="Latitude">Latitude (Optional)</label>
                                            <small class="form-text text-muted">
                                                <i class="fas fa-info-circle me-1"></i>Precise donor search
                                            </small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Longitude" type="number" step="any" class="form-control" placeholder="Longitude" />
                                            <label asp-for="Longitude">Longitude (Optional)</label>
                                            <small class="form-text text-muted">
                                                <i class="fas fa-info-circle me-1"></i>Precise donor search
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <button type="button" id="autoLocate" class="btn btn-outline-primary btn-sm mt-3">
                                    <i class="fas fa-location-crosshairs me-2"></i>Use Current Location
                                </button>
                            </div>

                            <!-- Contact Info -->
                            <div class="form-section mb-4">
                                <h6 class="section-title">
                                    <i class="fas fa-phone me-2"></i>Contact Information
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Phone" class="form-control" placeholder="Phone Number" inputmode="tel" />
                                            <label asp-for="Phone">Phone Number</label>
                                            <span asp-validation-for="Phone" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="Email" class="form-control" type="email" placeholder="Email Address" />
                                            <label asp-for="Email">Email Address</label>
                                            <span asp-validation-for="Email" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="form-actions d-flex justify-content-between align-items-center border-top pt-3 mt-4">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                    <i class="fas fa-save me-2"></i>Register Donor
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Tips -->
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-body">
                        <h6 class="fw-bold text-primary mb-3">
                            <i class="fas fa-lightbulb me-2"></i>Registration Tips
                        </h6>
                        <ul class="list-unstyled mb-0 row">
                            <li class="col-md-6 mb-2"><i class="fas fa-check text-success me-2"></i><strong>Accurate Info:</strong> Verify all fields</li>
                            <li class="col-md-6 mb-2"><i class="fas fa-check text-success me-2"></i><strong>Contact:</strong> Provide at least one method</li>
                            <li class="col-md-6 mb-2"><i class="fas fa-check text-success me-2"></i><strong>Location:</strong> GPS helps searches</li>
                            <li class="col-md-6 mb-2"><i class="fas fa-check text-success me-2"></i><strong>Privacy:</strong> Used for emergencies only</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Validation enhancement
        const form = document.getElementById('donorForm');
        form.addEventListener('submit', e => {
            const invalidFields = form.querySelectorAll('[required]:invalid');
            if (invalidFields.length > 0) {
                e.preventDefault();
                document.getElementById('validationSummary').classList.remove('d-none');
                invalidFields[0].scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        });

        // Real-time feedback
        document.querySelectorAll('[required]').forEach(field => {
            field.addEventListener('input', () => field.classList.remove('is-invalid'));
        });

        // Auto-location
        document.getElementById('autoLocate').addEventListener('click', () => {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(pos => {
                    document.getElementById('Latitude').value = pos.coords.latitude.toFixed(6);
                    document.getElementById('Longitude').value = pos.coords.longitude.toFixed(6);
                }, () => alert('Unable to get your location.'));
            } else {
                alert('Geolocation is not supported by your browser.');
            }
        });
    </script>
}

<style>
    :root {
        --primary-color: #dc3545;
        --primary-light: rgba(220, 53, 69, 0.2);
    }

    .form-section {
        position: relative;
    }

    .section-title {
        color: var(--primary-color);
        font-weight: 600;
        border-bottom: 2px solid var(--primary-light);
        padding-bottom: .4rem;
        margin-bottom: 1rem;
    }

    .form-actions {
        background: rgba(220, 53, 69, 0.05);
        border-radius: 0 0 1rem 1rem;
    }

    .card {
        animation: slideIn .5s ease-out;
        border-radius: 1rem;
    }

    @@keyframes slideIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .btn-outline-primary:hover {
        background-color: var(--primary-color);
        color: #fff;
    }

    .bg-gradient-primary {
        background: linear-gradient(90deg, #dc3545, #b92b3c); /* Red gradient */
    }

    section h1,
    section p {
        color: #fff !important; /* Force text to stay white */
    }

</style>
